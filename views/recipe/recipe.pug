extends ../common/layout

block content
    img.img-fluid(src=recipe.PictureUrls[0].Normal style="width: 100%;")
    .container
        .row(style="background-color: #F6F6F6;")
            p= recipe.PreparationTime.Description
        .row(style="background-color: #F6F6F6;")
            h1= recipe.Name
        .row(style="margin-bottom:100px")
            .col
                h2 Ingredints
                for ing in ingredients
                    .row
                        .col-2(style="width: 30px;")
                            span= ing.amount
                        .col-10
                            span= ing.name

            .col
                .row
                    h2 Instructions
                    span= recipe.Instructions
                .row
                    br
                    h1 Price #{price}
                    br
                    |
                    form(action="/check" method="POST")
                        input.form-control(type="number" name="maxTime" value=1)
                        |
                        button.btn.btn-primary(type='submit') Add to basket





